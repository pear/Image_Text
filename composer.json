    "source": "https://github.com/pear/Image_Text"
  },
  "require": {
    "php": ">=5.6.27",
    "pear/pear_packagefilemanager": "@dev",
    "ext-gd": "*"
  },
  "require-dev": {
    "phing/phing": "2.*",
    "bigmichi1/phing-pearpackagev2": "0.*",
    "phpunit/php-code-coverage": "2.*",
    "phpunit/phpunit": ">=3.7",
    "phpdocumentor/phpdocumentor": "2.*",
    "mayflower/php-codebrowser": "1.*",
    "phploc/phploc": "2.x",
    "sebastian/phpcpd": "2.x",
    "pdepend/pdepend": "2.x",
    "phpmd/phpmd": "2.*",
    "squizlabs/php_codesniffer": "2.x"
  },
  "autoload": {
